<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yiwo.friendscometogether.pages.ForgetPwActivity">
    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_set_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:id="@+id/titleTv"
            android:text="忘记密码" />

    </RelativeLayout>
    <com.yiwo.friendscometogether.custom.CImageView
        android:id="@+id/headIv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:scaleType="fitXY"
        android:src="@mipmap/hhh" />
    <EditText
        android:id="@+id/forgetPw_phoneEt"
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:ems="11"
        android:hint="  请输入手机号"
        android:inputType="phone"
        android:maxLength="11" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="326dp"
        android:layout_height="45dp">
        <EditText
            android:id="@+id/forgetPw_codeEt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:ems="11"
            android:hint="  请输入验证码"
            android:inputType="phone"
            android:maxLength="6" />
        <Button
            android:id="@+id/getCode_btn"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="获取验证码"
            android:background="@null"
            android:textColor="@color/yellow_ff9d00"
            android:textSize="16sp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/forgetPw_pwEt"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="16"
        android:hint="  设置密码"
        android:inputType="textPassword"
        android:maxLength="16" />
    <EditText
        android:id="@+id/forgetPw_confirmPwEt"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="16"
        android:hint="  确认密码"
        android:inputType="textPassword"
        android:maxLength="16" />

    <Button
        android:id="@+id/forgetPw_btn"
        android:layout_width="326dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn"
        android:text="完成"
        android:textColor="@color/white_ffffff" />
</LinearLayout>
