    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/default_title_bg" >

        <ImageView
            android:id="@+id/title_left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/head_return_btn"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/action_bar_right_clickable_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dip"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
            android:id="@+id/imageViewPreview"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:contentDescription="@string/empty" />

    <Button
            android:layout_marginBottom="20dp"
            android:id="@+id/buttonSend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/nim_message_button_bottom_send_selector"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="17sp" />

</LinearLayout>