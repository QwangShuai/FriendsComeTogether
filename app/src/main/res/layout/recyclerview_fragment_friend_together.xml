<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_fragment_friend_together_ll"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/black_f8f8f8" />
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/fragment_friend_together_rv_iv_title"
        android:layout_width="match_parent"
        android:layout_height="372px"
        android:src="@mipmap/ic_launcher"/>
    <RelativeLayout
        android:layout_marginTop="16px"
        android:layout_width="match_parent"
        android:layout_height="281px">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="520px"
            android:layout_height="50px"
            android:layout_alignLeft="@+id/contentTv"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/contentTv"
            android:text="标题标题"
            android:textColor="@color/black_333333"
            android:textSize="36px" />
        <TextView
            android:id="@+id/contentTv"
            android:text="开头讲个段子。在决定下笔写游记之前，我在朋友圈征集和酒有关旅行故事，很多人问我，要和酒有关的故事，还是要旅行故事？我说两者兼..."
            android:layout_marginTop="10px"
            android:layout_marginLeft="20px"
            android:layout_below="@+id/titleTv"
            android:textSize="28px"
            android:textColor="@color/black_333333"
            android:layout_width="520px"
            android:layout_height="161px" />
        <LinearLayout
            android:layout_marginTop="10px"
            android:layout_marginLeft="10px"
            android:orientation="horizontal"
            android:layout_below="@+id/contentTv"
            android:id="@+id/vessel"
            android:layout_width="520px"
            android:layout_height="50px">
        </LinearLayout>
        <RelativeLayout
            android:layout_marginRight="21px"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="13px"
                android:id="@+id/recyclerview_fragment_friend_together_ll_person_content"
                android:layout_marginRight="32px"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.yiwo.friendscometogether.custom.CImageView
                    android:id="@+id/headIv"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="140px"
                    android:layout_height="140px" />


                <LinearLayout
                    android:id="@+id/recyclerview_fragment_friend_together_ll_top_focus"
                    android:layout_marginTop="10px"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/recyclerview_fragment_friend_together_iv_focus"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/focus_on_empty_y"
                        android:layout_width="26px"
                        android:layout_height="24px" />

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:textColor="#333333"
                        android:textSize="24px"
                        android:text="关注"
                        android:layout_width="wrap_content"
                        android:layout_height="33px" />

                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginRight="102px"
                android:layout_alignParentRight="true"
                android:id="@+id/levelBg"
                android:background="@mipmap/level_bg"
                android:layout_width="107px"
                android:layout_height="30px">

                <TextView
                    android:id="@+id/levelTv"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19px"
                    android:textSize="20px"
                    android:textColor="@color/white_ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LV0"/>
            </RelativeLayout>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_below="@+id/recyclerview_fragment_friend_together_ll_person_content"
                android:layout_gravity="center"
                android:textColor="@color/black_333333"
                android:layout_marginTop="12px"
                android:textSize="24px"
                android:id="@+id/item_person"
                android:text="参与人数：3/10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_e5e5e5"
        android:layout_margin="20px"></View>
    <RelativeLayout
        android:layout_marginBottom="21px"
        android:layout_marginTop="5px"
        android:layout_width="match_parent"
        android:layout_height="42px">
        <LinearLayout
            android:layout_marginLeft="31px"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/look_overLl">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="38px"
                android:layout_height="38px"
                android:layout_centerVertical="true"
                android:src="@mipmap/look_over" />
            <TextView
                android:layout_marginLeft="7px"
                android:text="查看评价"
                android:textColor="@color/black_333333"
                android:textSize="28px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/consult_leaderLl">
            <ImageView
                android:layout_width="42px"
                android:layout_height="42px"
                android:layout_centerVertical="true"
                android:src="@mipmap/consult" />
            <TextView
                android:layout_marginLeft="7px"
                android:text="咨询队长"
                android:textColor="@color/black_333333"
                android:textSize="28px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/focus_on_activitiesLl">
            <ImageView
                android:id="@+id/focus_on_iv"
                android:layout_width="38px"
                android:layout_height="38px"
                android:layout_centerVertical="true"
                android:src="@mipmap/focus_on_empty_y" />
            <TextView
                android:layout_marginLeft="7px"
                android:text="关注活动"
                android:textColor="@color/black_333333"
                android:textSize="28px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>