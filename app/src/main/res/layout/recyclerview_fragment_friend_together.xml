<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_fragment_friend_together_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#F2F2F2" />

    <ImageView
        android:id="@+id/fragment_friend_together_rv_iv_title"
        android:layout_width="match_parent"
        android:layout_height="372px"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="520px"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contentTv"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/contentTv"
            android:text="标题标题"
            android:textColor="@color/black_333333"
            android:textSize="36px" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="520px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10px"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="开头讲个段子。在决定下笔写游记之前，我在朋友圈征集和酒有关旅行故事，很多人问我，要和酒有关的故事，还是要旅行故事？我说两者兼..."
            android:textColor="@color/black_333333"
            android:textSize="28px" />

        <TextView
            android:id="@+id/start_time"
            android:layout_below="@+id/contentTv"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10px"
            android:text="开始时间"
            android:textSize="28px"
            android:textColor="#424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/vessel"
            android:layout_width="520px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_time"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px" />

        <!--<LinearLayout-->
        <!--android:layout_marginTop="10px"-->
        <!--android:layout_marginLeft="10px"-->
        <!--android:orientation="horizontal"-->
        <!--android:layout_below="@+id/contentTv"-->
        <!--android:id="@+id/vessel"-->
        <!--android:layout_width="520px"-->
        <!--android:layout_height="wrap_content">-->

        <!--</LinearLayout>-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21px"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/recyclerview_fragment_friend_together_ll_person_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_marginTop="13px"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/headIv"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_gravity="center_horizontal" />


                <!--<LinearLayout-->
                <!--android:id="@+id/recyclerview_fragment_friend_together_ll_top_focus"-->
                <!--android:layout_marginTop="10px"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content">-->

                <!--<ImageView-->
                <!--android:id="@+id/recyclerview_fragment_friend_together_iv_focus"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:src="@mipmap/focus_on_empty_y"-->
                <!--android:layout_width="26px"-->
                <!--android:layout_height="24px" />-->

                <!--<TextView-->
                <!--android:gravity="center_vertical"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:textColor="#333333"-->
                <!--android:textSize="24px"-->
                <!--android:text="关注"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="33px" />-->

                <!--</LinearLayout>-->
                <Button
                    android:id="@+id/recyclerview_fragment_friend_together_btn_top_focus"
                    android:layout_width="120px"
                    android:layout_height="42px"
                    android:layout_gravity="center"
                    android:layout_marginTop="5px"
                    android:background="@drawable/bg_btn_red"
                    android:text="+ 关注"
                    android:textColor="@color/white_ffffff"
                    android:textSize="26px" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/levelBg"
                android:layout_width="107px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="102px"
                android:background="@mipmap/level_bg">

                <TextView
                    android:id="@+id/levelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19px"
                    android:text="LV0"
                    android:textColor="@color/white_ffffff"
                    android:textSize="20px" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/recyclerview_fragment_friend_together_ll_person_content"
                android:layout_gravity="center"
                android:layout_marginRight="32px"
                android:layout_marginTop="12px"
                android:text="参与人数：3/10"
                android:textColor="@color/black_333333"
                android:textSize="24px" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_margin="20px"
        android:background="@color/gray_e5e5e5"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:layout_marginBottom="21px"
        android:layout_marginTop="5px">

        <LinearLayout
            android:id="@+id/look_overLl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="31px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="38px"
                android:layout_height="38px"
                android:layout_centerVertical="true"
                android:src="@mipmap/look_over" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7px"
                android:text="查看评价"
                android:textColor="@color/black_333333"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/consult_leaderLl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="42px"
                android:layout_height="42px"
                android:layout_centerVertical="true"
                android:src="@mipmap/consult" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7px"
                android:text="咨询队长"
                android:textColor="@color/black_333333"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/focus_on_activitiesLl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/focus_on_iv"
                android:layout_width="38px"
                android:layout_height="38px"
                android:layout_centerVertical="true"
                android:src="@mipmap/focus_on_empty_y" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7px"
                android:text="关注活动"
                android:textColor="@color/black_333333"
                android:textSize="28px" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>