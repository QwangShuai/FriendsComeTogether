<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px" android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/dialog_activities_require_rl_close"
        android:layout_alignParentRight="true"
        android:layout_width="58px"
        android:layout_height="58px">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/close"
            android:layout_width="18px"
            android:layout_height="18px" />

    </RelativeLayout>
    <TextView
        android:id="@+id/dialog_activities_require_tv"
        android:layout_marginLeft="40px"
        android:layout_marginTop="2px"
        android:layout_below="@+id/dialog_activities_require_rl_close"
        android:textSize="32px"
        android:textColor="@color/black_333333"
        android:text="活动要求"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="30px"
        android:layout_below="@+id/dialog_activities_require_tv"
        android:layout_marginLeft="50px"
        android:layout_width="match_parent"
        android:layout_height="50px">
        <TextView
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:text="年龄："
            android:textSize="28px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>