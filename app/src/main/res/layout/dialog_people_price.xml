<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="620px"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dialog_people_price_rl_close"
        android:layout_alignParentRight="true"
        android:layout_width="58px"
        android:layout_height="58px">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/close"
            android:layout_width="18px"
            android:layout_height="18px" />

    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_people_price_tv"
        android:layout_marginLeft="40px"
        android:layout_marginTop="2px"
        android:layout_below="@+id/dialog_people_price_rl_close"
        android:textSize="32px"
        android:textColor="@color/black_333333"
        android:text="人均费用"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="40px"
        android:layout_marginLeft="40px"
        android:id="@+id/dialog_people_price_ll"
        android:layout_below="@+id/dialog_people_price_tv"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_people_price_tv_left"
                android:background="@drawable/bg_dialog_price_un_select"
                android:textColor="@color/black_333333"
                android:textSize="24px"
                android:gravity="center"
                android:text="参考展示"
                android:layout_width="160px"
                android:layout_height="56px" />

            <TextView
                android:id="@+id/dialog_people_price_tv_right"
                android:background="@drawable/bg_dialog_price_un_select"
                android:layout_marginLeft="20px"
                android:textColor="@color/black_333333"
                android:textSize="24px"
                android:gravity="center"
                android:text="我请客"
                android:layout_width="160px"
                android:layout_height="56px" />
            <TextView
                android:id="@+id/dialog_people_price_tv_pay"
                android:background="@drawable/bg_dialog_price_un_select"
                android:layout_marginLeft="20px"
                android:textColor="@color/black_333333"
                android:textSize="24px"
                android:gravity="center"
                android:text="线上交易"
                android:layout_width="160px"
                android:layout_height="56px" />

        </LinearLayout>

        <TextView
            android:id="@+id/dialog_people_price_tv_content"
            android:layout_marginTop="20px"
            android:textColor="@color/black_333333"
            android:text="活动费用由领队支付，你可免费参加活动。"
            android:textSize="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="30px"
            android:text="输入金额"
            android:textColor="@color/black_333333"
            android:textSize="28px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <LinearLayout
            android:layout_marginTop="20px"
            android:background="@drawable/bg_dialog_price_un_select"
            android:orientation="horizontal"
            android:layout_width="520px"
            android:layout_height="56px">

            <TextView
                android:layout_marginLeft="40px"
                android:layout_gravity="center_vertical"
                android:textSize="28px"
                android:textColor="@color/black_333333"
                android:text="¥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="phone"
                android:id="@+id/dialog_people_price_et_price"
                android:layout_marginLeft="10px"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:background="@null"
                android:textSize="28px"
                android:hint="00.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="30px"
            android:textSize="28px"
            android:textColor="@color/black_333333"
            android:text="费用说明"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <RelativeLayout
            android:layout_marginTop="20px"
            android:background="@drawable/bg_dialog_price_un_select"
            android:layout_width="520px"
            android:layout_height="56px">

            <EditText
                android:inputType="textPersonName"
                android:id="@+id/dialog_people_price_et_explain"
                android:layout_marginLeft="40px"
                android:layout_centerVertical="true"
                android:gravity="start"
                android:background="@null"
                android:textSize="28px"
                android:hint="请输入说明"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/dialog_people_price_btn"
        android:textSize="24px"
        android:layout_marginBottom="50px"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="确定"
        android:background="@drawable/bg_dialog_button"
        android:layout_below="@+id/dialog_people_price_ll"
        android:layout_width="260px"
        android:layout_height="56px" />

</RelativeLayout>
