<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fragment_friend_remember_rv_iv_title"
        android:layout_width="match_parent"
        android:layout_height="186dp" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_friend_remember_rv_tv_title"
            android:layout_marginLeft="10dp"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="标题标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/fragment_friend_remember_rv_ll_avatar"
            android:layout_marginTop="9dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.yiwo.friendscometogether.custom.CImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/fragment_friend_remember_rv_iv_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#333333"
                android:textSize="12sp"
                android:text="昵称昵称昵称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textSize="9sp"
                android:text="LV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/fragment_friend_remember_rv_ll_avatar"
            android:layout_below="@+id/fragment_friend_remember_rv_tv_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/fragment_friend_remember_rv_tv_content"
            android:text="开头讲个段子。在决定下笔写游记之前，我在朋友圈征集和酒有关旅行故事，很多人问我，要和酒有关的故事，还是要旅行故事？我说两者兼..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_friend_remember_rv_tv_c_time"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#333333"
            android:textSize="12sp"
            android:text="2018-04-04"
            android:layout_width="wrap_content"
            android:layout_height="17dp" />
        
        <LinearLayout
            android:id="@+id/fragment_friend_remember_rv_ll_look_num"
            android:layout_toRightOf="@+id/fragment_friend_remember_rv_tv_c_time"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="17dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"
                android:layout_width="14dp"
                android:layout_height="10dp" />

            <TextView
                android:gravity="center"
                android:textColor="#FF9D00"
                android:textSize="12sp"
                android:text="1234"
                android:layout_width="wrap_content"
                android:layout_height="17dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_friend_remember_rv_ll_comment_num"
            android:layout_toRightOf="@+id/fragment_friend_remember_rv_ll_look_num"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="17dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"
                android:layout_width="13dp"
                android:layout_height="12dp" />

            <TextView
                android:gravity="center"
                android:textColor="#FF9D00"
                android:textSize="12sp"
                android:text="1234"
                android:layout_width="wrap_content"
                android:layout_height="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="31dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="17dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"
                android:layout_width="13dp"
                android:layout_height="12dp" />

            <TextView
                android:gravity="center"
                android:textColor="#FF9D00"
                android:textSize="12sp"
                android:text="关注"
                android:layout_width="wrap_content"
                android:layout_height="17dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
