<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_friend_remember_rv_ll"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#f8f8f8" />

    <RelativeLayout
        android:layout_marginLeft="20px"
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yiwo.friendscometogether.custom.CImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/fragment_friend_remember_rv_iv_avatar"
            android:layout_width="88px"
            android:layout_height="88px" />

        <LinearLayout
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@+id/fragment_friend_remember_rv_iv_avatar"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_friend_remember_rv_tv_nickname"
                android:textColor="#333333"
                android:textSize="36px"
                android:text="昵称昵称昵称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="6px"
                android:layout_width="102px"
                android:layout_height="30px">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/level_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/fragment_friend_remember_rv_tv_usergrade"
                    android:layout_marginRight="19px"
                    android:layout_centerVertical="true"
                    android:textSize="18px"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentRight="true"
                    android:text="LV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:layout_alignParentRight="true"
            android:id="@+id/activity_details_of_friends_btn_focus"
            android:textSize="20px"
            android:textColor="@color/white_ffffff"
            android:text="+ 关注"
            android:background="@drawable/bg_btn_red"
            android:layout_width="80px"
            android:layout_height="36px" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="20px"
        android:id="@+id/fragment_friend_remember_rv_tv_title"
        android:layout_marginLeft="20px"
        android:textColor="#333333"
        android:textSize="36px"
        android:textStyle="bold"
        android:text="标题标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="20px"
        android:scaleType="centerCrop"
        android:id="@+id/fragment_friend_remember_rv_iv_title"
        android:layout_width="match_parent"
        android:layout_height="372px" />

