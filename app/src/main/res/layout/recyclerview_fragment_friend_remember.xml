        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        
        <LinearLayout
            android:id="@+id/fragment_friend_remember_rv_ll_look_num"
            android:layout_marginLeft="20px"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="34px">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/views"
                android:layout_width="28px"
                android:layout_height="20px" />

            <TextView
                android:layout_marginLeft="6px"
                android:id="@+id/fragment_friend_remember_rv_tv_look_num"
                android:gravity="center"
                android:textColor="#FF9D00"
                android:textSize="24px"
                android:text="1234"
                android:layout_width="wrap_content"
                android:layout_height="34px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_friend_remember_rv_ll_comment_num"
            android:layout_toRightOf="@+id/fragment_friend_remember_rv_ll_look_num"
            android:layout_marginLeft="20px"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="34px">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/index_message"
                android:layout_width="26px"
                android:layout_height="24px" />

            <TextView
                android:layout_marginLeft="6px"
                android:id="@+id/fragment_friend_remember_rv_tv_comment_num"
                android:gravity="center"
                android:textColor="#FF9D00"
                android:textSize="24px"
                android:text="1234"
                android:layout_width="wrap_content"
                android:layout_height="34px" />

        </LinearLayout>

        <TextView
            android:layout_marginRight="20px"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_friend_remember_rv_tv_c_time"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="24px"
            android:text="2018-04-04"
            android:layout_width="wrap_content"
            android:layout_height="34px" />

