<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiwo.friendscometogether.pages.OtherInformationActivity">

    <RelativeLayout
        android:id="@+id/activity_other_information_rl_top"
        style="@style/rl_top_bar">

        <TextView
            android:text="个人信息"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:id="@+id/activity_other_information_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/activity_other_information_rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#1F212D"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="40px"
                android:layout_marginRight="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="10px"
                    android:layout_toLeftOf="@+id/activity_other_information_iv_add_friend"
                    android:id="@+id/activity_other_information_tv_send_message"
                    android:background="@drawable/bg_dialog_button"
                    android:gravity="center"
                    android:textColor="@color/white_ffffff"
                    android:textSize="36px"
                    android:text="发消息"
                    android:layout_width="188px"
                    android:layout_height="64px" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/activity_other_information_iv_add_friend"
                    android:background="@drawable/bg_dialog_button"
                    android:src="@mipmap/add_friend"
                    android:layout_width="64px"
                    android:layout_height="64px" />

            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.yiwo.friendscometogether.custom.CImageView
                    android:id="@+id/activity_other_information_iv_avatar"
                    android:layout_marginLeft="48px"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="200px"
                    android:layout_height="200px" />

                <RelativeLayout
                    android:layout_marginTop="50px"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/activity_other_information_iv_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/white_ffffff"
                        android:textStyle="bold"
                        android:textSize="30px"
                        android:text="帅气的小迷糊"
                        android:layout_marginRight="10px"
                        android:id="@+id/activity_other_information_tv_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:id="@+id/activity_other_information_rl_sign_team"
                        android:background="@mipmap/level_red"
                        android:layout_marginTop="10px"
                        android:layout_below="@+id/activity_other_information_tv_nickname"
                        android:layout_width="183px"
                        android:layout_height="60px">

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="10px"
                            android:layout_marginBottom="3px"
                            android:textColor="@color/white_ffffff"
                            android:textSize="28px"
                            android:text="LV1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
