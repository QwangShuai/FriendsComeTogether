<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiwo.friendscometogether.pages.DetailsOfFriendsActivity">

    <RelativeLayout
        android:id="@+id/activity_details_of_friends_rl_top"
        style="@style/rl_top_bar">

        <TextView
            android:id="@+id/activity_details_of_friends_tv_top_title"
            android:text="标题标题"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:id="@+id/activity_details_of_friends_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/activity_details_of_friends_rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/activity_details_of_friends_iv_title"
                android:layout_width="match_parent"
                android:layout_height="372px" />

            <TextView
                android:layout_marginTop="30px"
                android:layout_marginRight="40px"
                android:layout_marginLeft="40px"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="36px"
                android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="43px"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="35px"
                        android:layout_height="24px" />

                    <TextView
                        android:layout_marginLeft="5px"
                        android:textColor="#333333"
                        android:textSize="28px"
                        android:text="浏览: 12345"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20px"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="30px"
                        android:layout_height="26px" />

                    <TextView
                        android:layout_marginLeft="6px"
                        android:textColor="#333333"
                        android:textSize="28px"
                        android:text="关注: 10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginRight="20px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="10px"
                android:background="#E5E5E5"
                android:layout_width="match_parent"
                android:layout_height="3px"
                />

            <RelativeLayout
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="40px"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="40px"
                            android:layout_height="40px" />

                        <TextView
                            android:layout_marginLeft="6px"
                            android:gravity="center"
                            android:textSize="28px"
                            android:textColor="#333333"
                            android:text="开始时间：2018.04.12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20px"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="40px"
                            android:layout_height="40px" />

                        <TextView
                            android:layout_marginLeft="6px"
                            android:gravity="center"
                            android:textSize="28px"
                            android:textColor="#333333"
                            android:text="结束时间：2018.05.12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20px"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="40px"
                            android:layout_height="40px" />

                        <TextView
                            android:layout_marginLeft="6px"
                            android:gravity="center"
                            android:textSize="28px"
                            android:textColor="#333333"
                            android:text="人均费用：¥1500.00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20px"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="40px"
                            android:layout_height="40px" />

                        <TextView
                            android:layout_marginLeft="6px"
                            android:gravity="center"
                            android:textSize="28px"
                            android:textColor="#333333"
                            android:text="活动地点：上海"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="32px"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.yiwo.friendscometogether.custom.CImageView
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="140px"
                        android:layout_height="140px" />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10px"
                        android:textColor="#333333"
                        android:textSize="24px"
                        android:text="昵称昵称昵称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="10px"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="26px"
                            android:layout_height="24px" />

                        <TextView
                            android:textColor="#333333"
                            android:textSize="24px"
                            android:text="关注"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:background="#F7F7F7"
                android:layout_width="match_parent"
                android:layout_height="254px">

                <LinearLayout
                    android:layout_marginRight="18px"
                    android:layout_marginLeft="40px"
                    android:layout_marginTop="32px"
                    android:layout_toLeftOf="@+id/activity_details_of_friends_iv_activity_title"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
