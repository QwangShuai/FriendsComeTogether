<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    tools:context="com.yiwo.friendscometogether.pages.UpdateActivity">
    <RelativeLayout
        android:id="@+id/activity_update_rl_top"
        style="@style/rl_top_bar">

        <TextView
            style="@style/tv_top_title"
            android:text="更新" />

        <RelativeLayout
            android:id="@+id/activity_update_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:layout_below="@+id/activity_update_rl_top"
        android:gravity="center"
        android:textSize="28px"
        android:textColor="@color/black_333333"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="40px"
        android:text="已有新版本：友来友聚2.1"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@drawable/bg_update"/>

    <Button
        android:id="@+id/activity_update_update_bt"
        android:text="更新"
        android:textSize="30px"
        android:textColor="@color/white_ffffff"
        android:background="@color/yellow_ff9d00"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="98px"
        />
</RelativeLayout>
