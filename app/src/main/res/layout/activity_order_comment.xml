<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yiwo.friendscometogether.pages.OrderCommentActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <TextView
            android:text="评价"
            style="@style/tv_top_title" />
        
        <RelativeLayout
            android:id="@+id/activity_order_comment_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/activity_order_comment_rl_complete"
            android:layout_alignParentRight="true"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textSize="30px"
                android:textColor="@color/white_ffffff"
                android:text="发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78px">

        <TextView
            android:id="@+id/activity_order_comment_tv_title"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="30px"
            android:text="云南旅游"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:background="#F1F1F1"
        android:layout_width="match_parent"
        android:layout_height="210px">

        <ImageView
            android:id="@+id/activity_order_comment_iv_title"
            android:scaleType="fitXY"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:layout_width="262px"
            android:layout_height="170px" />

        <TextView
            android:id="@+id/activity_order_comment_tv_content"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginRight="98px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/activity_order_comment_iv_title"
            android:textSize="30px"
            android:textColor="#333333"
            android:text="云南旅游活动云南旅游活 动云南旅游活动云南2222222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_order_comment_tv_time"
            android:layout_marginTop="10px"
            android:layout_below="@+id/activity_order_comment_tv_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/activity_order_comment_iv_title"
            android:textColor="#333333"
            android:textSize="24px"
            android:text="行程时间：2018.1.3-2018.1.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5px"
            android:layout_below="@+id/activity_order_comment_tv_time"
            android:textColor="#333333"
            android:textSize="24px"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/activity_order_comment_iv_title"
            android:id="@+id/activity_order_comment_tv_people_num"
            android:text="参加人数：122"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView
            android:id="@+id/activity_order_comment_tv_price_details"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:textColor="@color/black_333333"
            android:textSize="28px"
            android:text="自费"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_order_comment_tv_price"
            android:layout_marginRight="40px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#FF9D00"
            android:textSize="28px"
            android:text="合计费用：¥8888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    
    <EditText
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:gravity="start"
        android:textSize="28px"
        android:hint="分享给其他人的评价..."
        android:id="@+id/activity_order_comment_et_content"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="300px" />

</LinearLayout>
