<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yiwo.friendscometogether.pages.DetailsOfFriendTogetherActivity">
    <RelativeLayout
        android:id="@+id/activity_details_of_friends_together_rl_top"
        style="@style/rl_top_bar">

        <TextView
            android:id="@+id/activity_details_of_friends_together_tv_top_title"
            android:text="友聚详情"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:id="@+id/activity_details_of_friends_together_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/activity_details_of_friends_rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_details_of_friends_together_iv_title"
                android:layout_width="match_parent"
                android:layout_height="372px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="178px"
                android:layout_marginTop="30px">

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="480px"
                    android:layout_height="90px"
                    android:layout_marginLeft="40px"
                    android:text="标题标题标题标题标题标题标题标 题标题标题标题标题标题标题标题"
                    android:textColor="@color/black_333333"
                    android:textSize="32px" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40px"></LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
