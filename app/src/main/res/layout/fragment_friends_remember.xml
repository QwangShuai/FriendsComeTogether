<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/rl_top_bar">

        <TextView
            android:text="友记"
            style="@style/tv_top_title" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fragment_friend_remember_banner"
                android:layout_width="match_parent"
                android:layout_height="372px" />

            <LinearLayout
                android:layout_marginTop="20px"
                android:id="@+id/searchLl"
                android:gravity="center"
                android:background="@drawable/bg_search1"
                android:layout_marginLeft="30px"
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_marginRight="30px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/explore_search_icon" />

                <TextView
                    android:textSize="28px"
                    android:layout_marginLeft="20px"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索景点/领队" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_friend_remember_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            
            <RelativeLayout
                android:background="#F8F8F8"
                android:layout_width="match_parent"
                android:layout_height="130px">

                <View
                    android:layout_marginTop="20px"
                    android:background="#E5E5E5"
                    android:layout_width="match_parent"
                    android:layout_height="2px" />

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_gravity="center_vertical"
                        android:background="#979797"
                        android:layout_width="80px"
                        android:layout_height="2px"
                        />

                    <TextView
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:textSize="30px"
                        android:textColor="#6A6A6A"
                        android:text="已经到底了"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_gravity="center_vertical"
                        android:background="#979797"
                        android:layout_width="80px"
                        android:layout_height="2px"
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>