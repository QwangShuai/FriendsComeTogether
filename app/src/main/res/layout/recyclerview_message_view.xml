<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:elevation="4px"
        android:id="@+id/item_ll"
        android:layout_width="670px"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:background="@drawable/bg_message_view"
        android:orientation="vertical"
        android:padding="20px">

        <TextView
            android:id="@+id/message_view_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="完全搞不清楚状况的我"
            android:textColor="@color/black_333333"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/message_view_pic_iv"
            android:layout_width="match_parent"
            android:layout_height="312px"
            android:layout_marginTop="20px"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/message_view_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="你这内容属实简短"
            android:textColor="@color/black_626262"
            android:textSize="28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="20px"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="查看更多内容"
                android:textColor="@color/black_333333"
                android:textSize="28px" />

            <ImageView
                android:layout_width="12px"
                android:layout_height="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>