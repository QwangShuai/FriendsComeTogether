<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/rl_top_bar">

        <TextView
            style="@style/tv_top_title"
            android:text="友聚" />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/fragment_friend_together_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_my_focus_rl_top">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fragment_friend_together_banner"
                    android:layout_width="match_parent"
                    android:layout_height="372px" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginTop="26px">

                    <LinearLayout
                        android:id="@+id/select_city"
                        android:layout_width="136px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="80px"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fragment_friends_together_city_tv"
                            android:layout_width="112px"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="选择城市"
                            android:textColor="@color/black_333333"
                            android:textSize="28px" />

                        <ImageView
                            android:layout_width="20px"
                            android:layout_height="20px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/city" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/select_lable"
                        android:layout_width="136px"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fragment_friends_together_lable_tv"
                            android:layout_width="112px"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="选择标签"
                            android:textColor="@color/black_333333"
                            android:textSize="28px" />

                        <ImageView
                            android:layout_width="20px"
                            android:layout_height="20px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/label" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/search_leader"
                        android:layout_width="136px"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="80px"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fragment_friends_together_leader_tv"
                            android:layout_width="112px"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="搜索领队"
                            android:textColor="@color/black_333333"
                            android:textSize="28px" />

                        <ImageView
                            android:layout_width="20px"
                            android:layout_height="20px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/serach" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fragment_friend_together_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

