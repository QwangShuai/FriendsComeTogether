<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yiwo.friendscometogether.pages.InvitationActivity">

    <RelativeLayout
        android:id="@+id/activity_invitation_rl_top"
        style="@style/rl_top_bar">

        <TextView
            style="@style/tv_top_title"
            android:text="邀请好友" />

        <RelativeLayout
            android:id="@+id/activity_invitation_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_invitation_rl_ok"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确定"
                android:textColor="@color/white_ffffff"
                android:textSize="28px" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/activity_create_friend_remember_rl_active_title"
        android:layout_width="match_parent"
        android:layout_height="88px">

        <ImageView
            android:id="@+id/activity_create_friend_remember_iv_active_title"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:src="@mipmap/activities_require_r" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@+id/activity_create_friend_remember_iv_active_title"
            android:text="请选择活动标题"
            android:textColor="@color/black_333333"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/activity_create_friend_remember_iv_active_title_right"
            android:layout_width="14px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:src="@mipmap/right" />

        <TextView
            android:id="@+id/activity_create_friend_remember_tv_active_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:layout_toLeftOf="@+id/activity_create_friend_remember_iv_active_title_right"
            android:textColor="@color/black_333333"
            android:textSize="28px" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:background="@color/line" />

    <RadioGroup
        android:visibility="gone"
        android:layout_marginLeft="20px"
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:textSize="28px"
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:checked="true"
            android:text="我请客" />

        <RadioButton
            android:textSize="28px"
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:text="自费" />

    </RadioGroup>
    
    <EditText
        android:id="@+id/et"
        android:layout_marginTop="20px"
        android:gravity="start"
        android:layout_marginRight="40px"
        android:layout_marginLeft="40px"
        android:textSize="28px"
        android:textColor="@color/black_333333"
        android:hint="邀请说明"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="300px" />

</LinearLayout>
