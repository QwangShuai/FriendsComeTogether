<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/black_333333"
        android:textSize="15sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:text="标题标题标题标题标题标题标题标题标题标题ssssssssss…"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:layout_width="131dp"
            android:layout_height="88dp" />

        <RelativeLayout
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content"
                android:ellipsize="end"
                android:lines="3"
                android:textColor="#747474"
                android:textSize="12sp"
                android:text="开头讲个段子。在决定下笔写游记之前，我在朋友圈征集和酒有关旅行故事，很多人问我，要和酒有关的故…"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/time"
                android:layout_below="@+id/content"
                android:textSize="12sp"
                android:textColor="#969696"
                android:text="2018-04-04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_below="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/views"
                    android:layout_width="14dp"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/look_num"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:textColor="#FF9D00"
                    android:textSize="12sp"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/index_message"
                    android:layout_width="13dp"
                    android:layout_height="12dp" />

                <TextView
                    android:id="@+id/comment_num"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:textColor="#FF9D00"
                    android:textSize="12sp"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>
