<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dialog_edit_content_rl_close"
        android:layout_alignParentRight="true"
        android:layout_width="58px"
        android:layout_height="58px">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/close"
            android:layout_width="18px"
            android:layout_height="18px" />

    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_edit_content_tv"
        android:layout_marginLeft="40px"
        android:layout_marginTop="2px"
        android:layout_below="@+id/dialog_edit_content_rl_close"
        android:textSize="32px"
        android:textColor="@color/black_333333"
        android:text="活动内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:background="@drawable/bg_dialog_content"
        android:id="@+id/dialog_edit_content_rl_content"
        android:layout_marginTop="20px"
        android:layout_marginLeft="40px"
        android:layout_below="@+id/dialog_edit_content_tv"
        android:layout_width="520px"
        android:layout_height="530px">

        <EditText
            android:id="@+id/dialog_edit_content_et_content"
            android:textColor="@color/black_333333"
            android:gravity="start"
            android:textSize="28px"
            android:hint="请输入活动内容"
            android:background="@null"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_width="479px"
            android:layout_height="440px" />

        <TextView
            android:layout_marginTop="10px"
            android:layout_marginRight="20px"
            android:layout_alignParentRight="true"
            android:textColor="#CACACA"
            android:textSize="28px"
            android:text="0/200"
            android:id="@+id/dialog_edit_title_tv_text_num"
            android:layout_below="@+id/dialog_edit_content_et_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:textSize="24px"
        android:layout_marginBottom="80px"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="确定"
        android:background="@drawable/bg_dialog_button"
        android:layout_below="@+id/dialog_edit_content_rl_content"
        android:layout_width="260px"
        android:layout_height="56px" />

</RelativeLayout>
